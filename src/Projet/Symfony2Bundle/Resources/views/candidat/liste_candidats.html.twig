 <div class="col-lg-3 col-xs-6 active">
     <a href="{{path("projet_symfony2_ajouter_candidat") }}"><button class="btn btn-block btn-primary btn-flat">Ajouter un candidat</button></a>
     

    
</div>

{% endblock  %}